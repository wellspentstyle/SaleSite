# Backend Environment Variables (Railway)
# Copy this to Railway's environment variables dashboard

# Database (automatically set by Railway when you add PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database
PORT=3001

# AI APIs
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_INTEGRATIONS_OPENAI_API_KEY=your_openai_api_key_here
AI_INTEGRATIONS_OPENAI_BASE_URL=your_openai_base_url_here

# Airtable
AIRTABLE_PAT=your_airtable_personal_access_token
AIRTABLE_BASE_ID=your_airtable_base_id

# Telegram Bot (optional, if using)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Instagram API (optional, if using)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id

# Google APIs (optional, if using Google Drive integration)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# Frontend Environment Variables (Vercel)
# Copy these to Vercel's environment variables dashboard

# Site URL (will be your Vercel deployment URL)
VITE_SITE_URL=https://your-site.vercel.app

# Backend API URL (will be your Railway URL)
VITE_API_URL=https://your-railway-app.railway.app

# Airtable (needed by frontend)
AIRTABLE_PAT=your_airtable_personal_access_token
AIRTABLE_BASE_ID=your_airtable_base_id
